  <div id="welcome"><span id="welcome-nelisa"> Nelisa's </span> <span class="stats-description"><!--the -->weekly statistics</span></div>
  <div class="text-center periodbuttons">

    <form class="form-inline" action="/stats/sales-stats" method="POST">

      <select id="month-stat" class="form-control" name="month">
        {{#months}}
        <option value={{month}}>{{month}}</option>
        {{/months}}
      </select>

      <select id="week-stat" class="form-control" name="week">
        {{#weeks}}
        <option value={{week}}>{{week}}</option>
        {{/weeks}}
      </select>

      <button type="submit" class="btn btn-default">GO</button>
    </form>
  </div>
  <!-- <div class = "divider1"></div> -->
  <div class = "message"><strong>Please select</strong> a <strong>week</strong> to view the respective period's statistics.</div>
  <div class = "divider2"></div>

  <!-- <img src="/images/nelisa.jpg"></img> -->
  <script>
    $(document).ready(function(){
      $('#month-stat').on("change", function(){
        var month = $(this).val();
        console.log("THIS IS MONTH: ",month);
        $.get("/stats/weeks/"+month,function(compiledData){
          $("#week-stat").html(compiledData);
        });
      });
    });
    
  </script>
</body>
</html>
