<h1>Edit user</h1>

<form action="/users/edit/update" method="post">
{{#userDetails}}
<label for="currentUsername">Current Username</label>
<input type="text" name="currentUsername" id="currentUsername" value="{{username}}" disabled>

<label for="currentRole">Current Role</label>
<input type="text" disabled name="currentRole" value="{{role}}">

<label for="currentAdminRole">Current Admin Role</label>
<input type="text" disabled name="currentRole" value="{{adminRole}}">

<h4>Change to</h4>

<label for="username">Username</label>
<input type="text" name="username" id="username" value="{{username}}">

<label for="role">Role</label>
<select name="role" id="role">
<option value="admin">Admin</option>
<option value="user">User</option>
</select>

<label for="adminRole" id="adminLabel">Admin Role</label>
<select name="adminRole" id="adminRole">
  <option value="superuser">superuser</option>
  <option value="general">general</option>
</select>

<input type="hidden" name="id" value="{{id}}">
{{/userDetails}}
<button type="submit">Update User Details</button>
</form>
