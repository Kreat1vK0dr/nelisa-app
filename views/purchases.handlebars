<center>
<h3 class="title">Purchases</h3>
<form class="form-inline" action="/purchases/search" method="post">
  <div class="row center-table">
  <div class="col-md-12">
    <div class="input-group search">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default button-search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
      </span>

<input class="form-control" type="text" name="search" id="search" placeholder="Search a purchase by product or category">
</div>

<div class="search-selection search">
<select class="form-control" name="searchBy" id="searchBy">
  <option value="all">Product & Category</option>
  <option value="product">Product</option>
  <option value="category">Category</option>
</select>
</div>
</div>
</div>
</form>
</center>
<table class="db-table table table-bordered table-hover table-sm center-table" id="purchases-table">
  <thead class="thead-inverse">
    <tr>
    <th>id</th>
    <th>date</th>
    <th>supplier</th>
    <th>product</th>
    <th>category</th>
    <th>quantity</th>
    <th>remaining</th>
    <th>unitcost</th>
    </tr>
  </thead>
  <tbody id='searchResults'>
    {{#purchases}}
    <tr>
      <td>{{id}}</td>
      <td>{{date}}</td>
      <td>{{supplier}}</td>
      <td>{{product}}</td>
      <td>{{category}}</td>
      <td>{{quantity}}</td>
      <td>{{remaining}}</td>
      <td>{{unitcost}}</td>
    </tr>
    {{/purchases}}
  </tbody>
</table>
<script src="/js/search.js"></script>
