<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Spaza - {{title}}</title>
</head>
<body>
  <div id="title">
      <h1>{{title}}</h1>
</div>
<div class="divider1"></div>
  <table class="table table-bordered table-hover table-sm center-table">
  <thead class="thead-inverse">
    <!-- <tr> <th colspan="6"> My First HandleBars Table </th> </tr> -->
    <tr> <th>Product</th> <th>Category</th> <th>Quantity Sold</th> <th>Inventory</th> <th>Profit</th> <th>Profit Margin</th> </tr>
  </thead>
  <tbody>
      {{#each data}}
        <tr>
          <td class="inverse">{{product}}</td> <td>{{category}}</td> <td class="left-indent">{{quantity}}</td> <td class="left-indent">{{inventory}}</td> <td class="left-indent">R{{profit}}</td> <td class="left-indent">{{profitMargin}}%</td>
        </tr>
        {{/each}}
      </tbody>

  </table>
</body>
</html>
