<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Spaza - Home Page</title>
</head>
<body>

  <div id="welcome"><span id="welcome-nelisa"> Nelisa's </span> <span class="stats-description"><!--the -->weekly summary of sales data</span></div>
  <div class="text-center periodbuttons">

    <form class="form-inline" action="/summary/table" method="POST">

      <select class="form-control" name="type">
        <option value='product'>Product</option>
        <option value='category'>Category</option>
        </select>

      <select id="month-stat" class="form-control" name="month">
        {{#months}}
        <option value={{month}}>{{month}}</option>
        {{/months}}
      </select>

      <select id="week-stat" class="form-control" name="week">
        {{#weeks}}
        <option value={{week}}>{{week}}</option>
        {{/weeks}}
      </select>

      <button type="submit" class="btn btn-default">GO</button>
    </form>

  </div>
  <!-- <div class = "divider1"></div> -->
  <div class = "message"><strong>Please select</strong> the <strong>week</strong> and either <strong>category or product</strong> to <br>view a summary of sales data.</div>
  <div class = "divider2"></div>

  <!-- <img src="/images/nelisa.jpg"></img> -->
  <script>
    $(document).ready(function(){
      $('#month-stat').on("change", function(){
        var month = $(this).val();
        console.log("THIS IS MONTH: ",month);
        $.get("/stats/weeks/"+month,function(compiledData){
          $("#week-stat").html(compiledData);
        });
      });
    });

  </script>
</body>
</html>
