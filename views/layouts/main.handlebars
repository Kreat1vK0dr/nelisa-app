    <b>Logged in as user <br> <span>{{user}}</span></b>
    <a  href="/logout"><button id="signOut">Sign out</button></a>
{{else}}

        <div class="container-fluid">
            <div class="navbar-header nelisa-font">
                <a class="navbar-brand" href="/">Nelisa's Spaza</a>
            </div>

            <ul class="nav navbar-nav">

                <li class="navbutton"><a href="/products">Available stock</a></li>
                <li class="navbutton"><a href="/about">about</a></li>

            </ul>

            <a href="/login">
                <div class="loginbutton" id="admin-login-button">Login</div>
            </a>
        </div>
        {{/if}}
