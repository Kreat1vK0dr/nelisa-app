    <li class="navbutton admin-nav"><a href="/suppliers">suppliers</a></li>
    <li class="navbutton admin-nav"><a href="/products">products</a></li>
    <li class="navbutton admin-nav"><a href="/categories">categories</a></li>
    <li class="navbutton admin-nav"><a href="/sales/add">add sale</a></li>
    <li class="navbutton admin-nav"><a href="/purchases/add">Add purchase</a></li>
