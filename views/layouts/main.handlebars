    <nav class="navbar navbar-inverse">
{{#if admin}}
<div class="container-fluid">
  <div class="navbar-header nelisa-font">
    <a class="navbar-brand" href="/">Nelisa's Dashboard</a>
  </div>

  <ul class="nav navbar-nav">

    <!-- <li class="navbutton"><a href="/">about</a></li> -->
    <li class="navbutton admin-nav"><a href="/graphs">explore data</a></li>
    <li class="navbutton admin-nav"><a href="/stats">stats</a></li>
