<center>
<h3 class="title">Products</h3>
<div class="center">

<form class="form-inline" action="/products/search" method="post">
  <div class="row center-table">
  <div class="col-md-12">
    <div class="input-group search">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default button-search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
      </span>
<input type="text" name="search" class="form-control" id="search" placeholder="Search for products by name or category">
</div>

<div class="search-selection search">
<select name="searchBy" id="searchBy" class="form-control">
  <option value="all">Name & Category</option>
  <option value="product">Product Name</option>
  <option value="category">Category</option>
</select>
</div>
</div>
</div>
</form>
</div>
</center>

<table class="db-table table table-bordered table-hover table-sm center-table" id="products-table">
  <thead class="thead-inverse">
  <tr>
    {{#if admin}}
    <th>ID</th>
    <th>Product</th>
    <th>Category</th>
    <th>Price</th>
    <th>Inventory</th>
    {{#if superuser}}
    <th class="link-header" colspan="2"><a class="table-links" href="/products/add"><div class="add-link">ADD</div></a></th>
    {{/if}}
    {{else}}
    <th>ID</th>
    <th>Product</th>
    <th>Category</th>
    <th>Price</th>
    <th>Available</th>
    {{/if}}
  </tr>
  </thead>
  <tbody id="searchResults">

  {{#products}}
  <tr>
    <td class="crud-table highlight">{{p_id}}</td>
    <td class="crud-table highlight">{{product}}</td>
    <td class="crud-table highlight">{{category}}</td>
    <td class="crud-table highlight">{{price}}</td>
    <td class="crud-table highlight">{{inventory}}</td>
    {{#if ../superuser}}
    <td class="crud-table highlight link-cell"><a class="table-links" href="/products/edit/{{p_id}}"><div class="edit">Edit</div></a></td>
    <td class="crud-table highlight link-cell"><a disable class="table-links" href="/products/delete/{{p_id}}"><div class="delete">Delete</div></a></td>
    {{/if}}

  </tr>
  {{/products}}

</tbody>
</table>
  {{#no_products}}
    <p>You have no products. Please add one above.</p>
  {{/no_products}}

<script src="/js/search.js"></script>
