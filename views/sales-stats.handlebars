
  <div id="title">
      <h1>sales stats</h1>
      <h2>{{period}}</h2>
      </div>

<div class="text-center periodbuttons">

<form action="/stats/sales-stats" method="POST">

  <select class="" name="month">
    {{#months}}
    <option value={{month}} {{selected}}>{{month}}</option>
    {{/months}}
  </select>

  <select class="" name="week">
    {{#weeks}}
    <option value={{week}} {{selected}}>{{week}}</option>
    {{/weeks}}
  </select>

  <button type="submit" class="btn btn-default">GO</button>
</form>

<div class="divider1"></div>
  <table class="table table-bordered table-sm table-hover center-table">
  <thead class="thead-inverse">
    <tr> <th>Sales Stat</th> <th>Product/Category</th> <th>Quantity Sold</th> <th>Stock Available</th> <th>Revenue (ZAR)</th> <th>Cost (ZAR)</th> <th>Profit (ZAR)</th> <th>Profit Margin (%)</th> </tr>
  </thead>
<tbody>
      {{#data}}
        <tr>
          <td class="inverse">{{description}}</td> <td class="active">{{name}}</td> <td class="left-indent active">{{quantity}}</td> <td class="left-indent active">{{stockAvailable}}</td> <td class="left-indent active">{{bracketNegative revenue}}</td><td class="left-indent active">{{cost}}</td><td class="left-indent active">{{bracketNegative profit}}</td> <td class="left-indent active">{{bracketNegative profitMargin}}</td>
        </tr>
      {{/data}}
  </tbody>

  </table>
