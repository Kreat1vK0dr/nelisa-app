<h1>USERS</h1>

<center>
  {{#alert}}
  <h4 style="color:red;"><b>{{message}}</b></h4>
  {{/alert}}
  <a href="/users/add"><button>Add user</button></a>
  <table class="table table-bordered table-hover table-sm center-table" id="users-table">
    <thead class="thead-inverse">
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>Role</th>
      <th>Admin Role</th>
      <th>Date Added</th>
      <th>Last Login</th>
    </tr>
  </thead>
  <tbody>
    {{#users}}
    <tr>
    <td>{{id}}</td>
    <td>{{username}}</td>
    <td>{{role}}</td>
    <td>{{admin_role}}</td>
    <td>{{dateAdded}}</td>
    <td>{{lastLogin}}</td>
    <td class="crud-table highlight"><a href="/users/edit/{{id}}"><button>Edit</button></a></td>
    <td class="crud-table highlight">
<form action="/users/delete" method="post">
  <input type="hidden" name="id" value="{{id}}">
  <input type="hidden" name="username" value="{{username}}">
  <input type="hidden" name="role" value="{{role}}">
  <input type="hidden" name="adminRole" value="{{admin_role}}">
  <button type="submit">Delete</button>
</form>
  </td>
  </tr>
    {{/users}}
  </tbody>
</table>
</center>
